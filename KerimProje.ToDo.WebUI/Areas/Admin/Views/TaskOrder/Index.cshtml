@model List<TaskListAllViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count != 0)
{
    <table class="table table-hover table-sm mt-2">
        <tr>
            <th>Name</th>
            <th>Explanation</th>
            <th>Creation Date</th>
            <th>User</th>
            <th>Definition</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Explanation</td>
                <td>@item.CreationDate.ToString("D")</td>
                <td>
                    @{
                        if (item.AppUser == null)
                        {
                            <span class="badge badge-danger">Not User</span>
                        }
                        else
                        {
                            <span class="badge badge-success">@item.AppUser.Name</span>
                        }
                    }
                </td>
                <td>@item.Urgency.Definition</td>
            </tr>
        }
    </table>
}
else
{
    <div class="my-2 text-center lead">
        No found!
    </div>
}