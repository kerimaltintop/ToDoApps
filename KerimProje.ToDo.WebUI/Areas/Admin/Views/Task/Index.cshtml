@model List<TaskListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count != 0)
{
    <a asp-action="AddTask" class="btn btn-info btn-sm my-2">Add Task</a>
    <table class="table table-sm table-hover">
        <tr>
            <th>Name</th>
            <th>Explanation</th>
            <th>Date</th>
            <th>Urgency Status</th>
            <th>Operation</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Explanation</td>
                <td>@item.CreationDate.ToString("D")</td>
                <td>@item.Urgency.Definition</td>
                <td>
                    <a asp-action="UpdateTask" asp-controller="Task" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Update</a>
                    <a href="#">Delete</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="p-3 text-center mt-3">
        <p class="lead">
            No task registered in the system.
        </p>
        <a asp-action="AddTask" class="btn btn-info btn-sm">Add Task</a>
    </div>
}


<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

