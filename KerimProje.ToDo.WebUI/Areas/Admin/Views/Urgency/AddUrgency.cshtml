@model UrgencyAddViewModel

@{
    ViewData["Title"] = "AddUrgency";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>AddUrgency</h1>

<form class="w-75 mx-auto p-3" method="post">
    <div class="form-group">
        <label asp-for="Definition"></label>
        <span asp-validation-for="Definition" class="text-danger"></span>
        <input type="text" asp-for="Definition" class="form-control" />
    </div>
    <button type="submit" class="btn btn-info btn-sm">Save</button>
</form>