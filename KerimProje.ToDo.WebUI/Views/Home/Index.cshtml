@model AppUserSignInModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}

<form class="mt-5 w-50 mx-auto p-4 shadow" method="post" asp-action="SignIn">
    <div class="form-group">
        <label asp-for="Username"></label>
        <span asp-validation-for="Username" class="text-danger"></span>
        <input asp-for="Username" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="Password" class="form-control" />
    </div>

    <div class="form-check">
        <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label"></label>

    </div>

    <input type="submit" class="btn btn-info btn-sm" value="SignIn" />
    <a asp-action="Register" class="btn btn-warning btn-sm">Register</a>

</form>